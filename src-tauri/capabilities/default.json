{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:allow-app-write-recursive",
    "fs:allow-app-meta-recursive",
    "fs:allow-read-text-file",
    "fs:allow-read-dir",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPLOCALDATA/**"
        }
      ]
    },
    "dialog:default",
    "app-exit:default"
  ]
}
